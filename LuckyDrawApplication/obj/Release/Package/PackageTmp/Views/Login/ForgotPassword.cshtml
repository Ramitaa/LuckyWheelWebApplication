@model LuckyDrawApplication.Models.ForgotPassword
@{
    ViewBag.Title = "Forgot Password";
}

<style>
    body {
        background-color: gainsboro;
    }
</style>

<link rel="stylesheet" href="~/admin-lte/css/AdminLTE.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">

<div class="login-box">
    <div class="login-logo">
        <b>LuckyWheel</b><small>Admin</small>
    </div>
    <!-- /.login-logo -->
    <div class="login-box-body" style="padding-bottom:40px;">
        <h4 class="login-box-msg">Forgot your password?</h4>
        <p class="login-box-msg">Enter your email address and we will send you instructions on how to reset your password.</p>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div style="text-align: center; color: #a94442" ;>
                @ViewBag.ErrorMessage
            </div>

            <div class="form-group has-feedback" style="margin-top:20px;">
                @Html.EditorFor(model => model.EmailAddress, new { htmlAttributes = new { @class = "form-control", @placeholder = "Email Address" } })
                <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                @Html.ValidationMessageFor(model => model.EmailAddress, "", new { @class = "text-danger" })
            </div>

            <div class="row" style="margin-top:20px;">
                <div class="col-xs-8"><a style="vertical-align: -webkit-baseline-middle;" href="@Url.Action("Index", "Login")">Back</a></div>
                <!-- /.col -->
                <div class="col-xs-4">
                    <button type="submit" id="Index" class="btn btn-primary btn-block btn-flat">Send Email</button>
                </div>
                <!-- /.col -->
            </div>



        }

    </div>
    <!-- /.login-box-body -->
</div>
<!-- /.login-box -->

<script src="~/admin-lte/js/adminlte.min.js"></script>
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
